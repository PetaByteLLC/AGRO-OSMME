        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:text="Координаты"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/coordinate_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/coordinate_list_item" />

        <Button
            android:id="@+id/btn_upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:drawableTop="@drawable/outline_file_upload_24"
            android:paddingVertical="8dp"
            android:text="Загрузить фото"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:text="Фото"
            android:textColor="@color/black" />

        <GridView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="16dp"
            android:numColumns="2"
            android:stretchMode="spacingWidth"
            android:verticalSpacing="16dp"
            tools:listitem="@layout/agro_photo" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius"
            android:text="@string/Save"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>
</ScrollView>