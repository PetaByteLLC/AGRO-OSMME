<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_values"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:text="Общая информация"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/editTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="@string/name"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Площадь"
                android:inputType="numberDecimal"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Область"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Район"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/farmerSurName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Фамилия землепользователя"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/farmerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Имя земплепользователя"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/farmerMobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Телефон земплепользователя"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/cadastrId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Кадастровый номер поля"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/aggregator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Агрегатор"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <EditText
                android:id="@+id/additionalInformation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_background"
                android:hint="Дополнительная информация"
                android:inputType="text"
                android:textColor="@color/ag_text_color"
                android:textColorHint="@color/ag_text_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Координаты"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coordinate_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"/>

            <Button
                android:id="@+id/btn_upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radius"
                android:drawableTop="@drawable/outline_file_upload_24"
                android:paddingVertical="8dp"
                android:text="Загрузить фото"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="10dp"
                tools:listitem="@layout/agro_photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Севооборот"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#90828282" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/crop_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/crop_list_item" />

            <Button
                android:id="@+id/crop_add"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:drawableStart="@drawable/baseline_add_16"
                android:paddingHorizontal="10dp"
                android:text="Добавить культуру"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#138ce7" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius"
            android:text="@string/Save"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>
</ScrollView>
